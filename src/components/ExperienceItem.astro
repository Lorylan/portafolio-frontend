---
import HeartIcon from "./icons/HeartIcon.astro";
import StarIcon from "./icons/StarIcon.astro";

export interface ExperienceItemProps {
    experience: {
        title: string;
        subtitle: string;
        date: string;
        description: string;
    };
}

const { title, subtitle, date, description } = Astro.props;
---
<div class="items-center">
    <div class="absolute size-4 bg-white rounded-full -start-2 mt-2 border border-white dark:border-gray-900 flex items-center justify-center">
        <StarIcon class="size-4 text-gray-900 dark:text-gray-100" />
    </div>
    <h3 class="text-lg font-semibold text-purple-200 dark:text-white">{title}</h3>
</div>

<h3 class="text-base font-semibold text-gray-400 dark:text-white">{subtitle}</h3>
<time class="mb-1 text-sm font-normal leading-none text-gray-600 dark:text-gray-500">{date}</time>
<p class="text-base font-normal text-gray-500 dark:text-gray-400 text-balance">{description}.</p>
